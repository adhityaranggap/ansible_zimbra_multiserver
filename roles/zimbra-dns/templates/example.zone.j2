$TTL    3600
@               IN SOA  ns.{{ default_domain }}.     root (
                                        2016030901      ; serial (d. adams)
                                        3H              ; refresh
                                        15M             ; retry
                                        1W              ; expiry
                                        1D )            ; minimum

                IN NS   ns.{{ default_domain }}.
                IN A    {{ ansible_default_ipv4.address }}
                IN MX 5 mta.{{ default_domain }}.
ns              IN A    {{ ansible_default_ipv4.address }}
ldap            IN A    {{ ansible_default_ipv4.address }}
mta             IN A    {{ zimbra_mta_ip }}
mailbox         IN A    {{ zimbra_mailbox_ip }}
